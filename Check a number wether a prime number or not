#include<iostream>
using namespace std;
int main() {
    int number, flag = 0;
    cout << "enter a number: " << endl;
    cin >> number;
    for(int i = 2; i < number; i++){
        if(number % i == 0){
            cout << "It is not a prime number" << endl;
            flag=1;
            break;
        }
    }
    if(flag==0){
        cout << "It is a prime number" << endl;
    }
    return 0;
}
